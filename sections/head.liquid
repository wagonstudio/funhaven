{% if section.settings.show_subheader %}
  <section class="_subheader">
    <div class="_container full-1">
      <div class="_content">
        <p class="text-l _lgh">{{ section.settings.subheader_text }}</p>
      </div>
    </div>
  </section>
{% endif %}
<section class="_header _1">
  <div class="in-header">
    <div class="_container full-1">
      <div class="_flex">
        <div class="d-lg-none _prefirst">
          <div class="_icons ">
            <a  class="_icon btnactivemenu d-lg-none" data-bs-toggle="collapse" href="#collapseMenu" role="button" aria-expanded="false" aria-controls="collapseMenu">
              <span class="in-activemenu">
                <span class="_i"></span>
                <span class="_ii"></span>
                <span class="_iii"></span>
              </span>
            </a>
          </div>
        </div>
        <div class="_first">
          <a class="_brand" href="/">
            {% if section.settings.logo %}
              <img 
                src="{{ section.settings.logo | image_url: width: 600 }}" 
                width="600" 
                alt="Logo"
                class="d-none d-lg-block"
              >
            {% endif %}
          
            {% if section.settings.logo_tablet %}
              <img 
                src="{{ section.settings.logo_tablet | image_url: width: 600 }}" 
                width="600" 
                alt="Logo"
                class="d-none d-md-block d-lg-none"
              >
            {% endif %}
          
            {% if section.settings.logo_mobile %}
              <img 
                src="{{ section.settings.logo_mobile | image_url: width: 600 }}" 
                width="600" 
                alt="Logo"
                class="d-md-none"
              >
            {% endif %}
          </a>

        </div>
        <div class="_second">
          <div class="_menu d-none d-lg-flex">
            <ul class="_nav nav">
              {% for item in linklists.main-menu.links %}
                <li class="_item nav-item dropdown {% if item.active %}current{% endif %}">
                  {% if item.links and item.links.size > 0 %}
                    <a 
                      href="{{ item.url }}" 
                      class="dropdown-toggle text-l _smbld" 
                      role="button" 
                      data-bs-toggle="dropdown" 
                      aria-expanded="false"
                    >
                      {{ item.title }}
                    </a>
                    <ul class="dropdown-menu">
                      {% for subitem in item.links %}
                        <li>
                          <a 
                            class="dropdown-item {% if subitem.active %}current{% endif %} text-l _smbld" 
                            href="{{ subitem.url }}"
                          >
                            {{ subitem.title }}
                          </a>
                        </li>
                      {% endfor %}
                    </ul>
                  {% else %}
                    <a 
                      class="text-l _smbld" 
                      href="{{ item.url }}" 
                      aria-label="Go to {{ item.title }} page"
                    >
                      {{ item.title }}
                    </a>
                  {% endif %}
                </li>
              {% endfor %}
            </ul>
  
          </div>
          <div class="_icons ">
            <a  class="_icon" id="user-icon-bubble" href="{{ routes.account_url }}">
              <span class="_svg-wrapper">
                <img src="https://cdn.shopify.com/s/files/1/0619/3971/2098/files/user-icon.svg?v=1744648345">
              </span>
            </a>
            <a  class="_icon btnactivecart" id="cart-icon-bubble">
              <span class="_svg-wrapper">
                <img src="https://cdn.shopify.com/s/files/1/0619/3971/2098/files/cart-icon.svg?v=1744648345">
              </span>
              <span rv-show="cart.item_count | gt 0" data-cart-view>
                <div class="_bubble" >
                  <span class="mega-nav-count nav-main-cart-amount count-items" data-cart-count-bubble>
                    <span data-cart-render="item_count"></span>
                  </span>
                </div>
              </span>
            </a>
            
          </div>
        </div>
      </div>
      <div class="collapse" id="collapseMenu">
        <div class="card card-body">
          
          <aside class="_fullmenu _i">
            <span class="closemenu _backcontent"></span>
            <div class="_content">
              <div class="_menu">
                <a class="close-fullmenu closemenu d-none">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
