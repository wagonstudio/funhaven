                  </svg>
                </a>
                  {% for item in linklists.main-menu.links %}
                    <li class="_item nav-item dropdown {% if item.active %}current{% endif %}">
                      {% if item.links and item.links.size > 0 %}
                        <a 
                          href="{{ item.url }}" 
                          class="dropdown-toggle " 
                          role="button" 
                          data-bs-toggle="dropdown" 
                          aria-expanded="false"
                        >
                         <span class="title-1 d-none d-md-block">{{ item.title }}</span>
                         <span class="title-3 d-md-none">{{ item.title }}</span> 
                        </a>
                        <ul class="dropdown-menu">
                          {% for subitem in item.links %}
                            <li>
                              <a 
                                class="dropdown-item {% if subitem.active %}current{% endif %} text-l _smbld" 
                                href="{{ subitem.url }}"
                              >
                                {{ subitem.title }}
                              </a>
                            </li>
                          {% endfor %}
                        </ul>
                      {% else %}
                        <a 
                          class="" 
                          href="{{ item.url }}" 
                          aria-label="Go to {{ item.title }} page"
                        >
                         <span class="title-1 d-none d-md-block">{{ item.title }}</span>
                         <span class="title-3 d-md-none">{{ item.title }}</span>
                        </a>
                      {% endif %}
                    </li>
                  {% endfor %}
              </div>
            </div>
          </aside>
                      
        </div>
      </div>
    </div>
  </div>
  
</section>


{% schema %}
{
  "name": "Head",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_subheader",
      "label": "Show subheader",
      "default": true
    },
    {
      "type": "text",
      "id": "subheader_text",
      "label": "Subheader text",
      "default": "Free shipping!"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "image_picker",
      "id": "logo_tablet",
      "label": "Logo Tablet"
    },
    {
      "type": "image_picker",
      "id": "logo_mobile",
      "label": "Logo Mobile"
    }
  ],
  "presets": [
    {
      "name": "Header principal"
    }
  ]
}
{% endschema %}
