          </figure>
        </div>
      </div>
    </div>
  </div>
  <figure class="sec_bg">
    <img src="https://cdn.shopify.com/s/files/1/0619/3971/2098/files/clouds_1.svg?v=1745210578">
  </figure>
</section>

{% schema %}
{
  "name": "FAQ",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "FAQ"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "ARE WE HAVENâ€™ FUN YET?"
    },
    {
      "type": "text",
      "id": "cta_heading",
      "label": "Note Heading",
      "default": "Still have questions?"
    },
    {
      "type": "text",
      "id": "cta_label",
      "label": "CTA Button Text",
      "default": "GET IN TOUCH WITH US"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Button Link"
    }
  ],
  "blocks": [
    {
      "type": "faq_item",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "What is your return policy?"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Answer",
          "default": "<p>We offer a 30-day return policy on all unopened packages.</p>"
        }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "FAQ",
      "category": "Custom"
    }
  ]
}
{% endschema %}
